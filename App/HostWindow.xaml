<Window x:Class="Remotier.HostWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        Title="Remotier Host" Height="450" Width="600"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}"
        StateChanged="Window_StateChanged"
        Closing="Window_Closing">

    <Window.Resources>
        <ContextMenu x:Key="TrayMenu">
            <MenuItem Header="Show" Click="TrayShow_Click"/>
            <MenuItem Header="Stop Hosting" Click="Stop_Click"/>
            <Separator/>
            <MenuItem Header="Exit" Click="TrayExit_Click"/>
        </ContextMenu>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <tb:TaskbarIcon x:Name="TrayIcon"
                        ToolTipText="Remotier Host"
                        IconSource="/Remotier;component/Assets/remote.ico"
                        ContextMenu="{StaticResource TrayMenu}"
                        TrayMouseDoubleClick="TrayIcon_TrayMouseDoubleClick"
                        Visibility="Collapsed"/>

        <!-- Header -->
        <StackPanel HorizontalAlignment="Center" Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,5">
                <materialIcons:MaterialIcon Kind="ServerNetwork" Width="24" Height="24" Foreground="{StaticResource AccentBrush}" Margin="0,0,10,0"/>
                <TextBlock Text="HOSTING SESSION" FontSize="20" FontWeight="Bold" Foreground="{StaticResource AccentBrush}"/>
                <Button Margin="20,0,0,0" Width="24" Height="24" Background="Transparent" BorderThickness="0" Click="Settings_Click" Cursor="Hand">
                    <Button.Content>
                        <materialIcons:MaterialIcon Kind="Cog" Width="20" Height="20" Foreground="#666666"/>
                    </Button.Content>
                </Button>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,0">
                 <TextBlock Text="IP: " Foreground="#888888"/>
                 <TextBlock x:Name="IpText" Text="127.0.0.1" Foreground="White" FontWeight="Bold" Margin="0,0,10,0"/>
                 <Button Content="Copy" Padding="5,0" Height="18" FontSize="10" Click="CopyIp_Click" Background="#333333" Foreground="White" BorderThickness="0" Cursor="Hand"/>
            </StackPanel>

            <Grid x:Name="SessionInfoGrid" Margin="0,15,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" HorizontalAlignment="Right" Margin="0,0,10,0">
                    <TextBlock Text="Session ID" Foreground="#888888" FontSize="10" HorizontalAlignment="Right"/>
                    <TextBlock x:Name="SessionIdText" Text="---" Foreground="White" FontWeight="Bold" FontSize="14" HorizontalAlignment="Right" MouseLeftButtonDown="SessionIdText_MouseLeftButtonDown" Cursor="Hand" ToolTip="Click to Copy"/>
                </StackPanel>
                <Rectangle Grid.Column="1" Width="1" Fill="#333333" Margin="0,2"/>
                <StackPanel Grid.Column="2" HorizontalAlignment="Left" Margin="10,0,0,0">
                    <TextBlock Text="Session Password" Foreground="#888888" FontSize="10"/>
                    <TextBlock x:Name="SessionPassText" Text="---" Foreground="{StaticResource AccentBrush}" FontWeight="Bold" FontSize="14" MouseLeftButtonDown="SessionPassText_MouseLeftButtonDown" Cursor="Hand" ToolTip="Click to Copy"/>
                </StackPanel>
            </Grid>
        </StackPanel>

        <!-- Settings Section -->
        <Border Grid.Row="1" Background="{StaticResource SurfaceBrush}" CornerRadius="5" Padding="15" Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="Stream Settings" FontWeight="Bold" Margin="0,0,0,10"/>
                
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <materialIcons:MaterialIcon Kind="Monitor" Width="16" Height="16" Foreground="Gray" Margin="0,0,10,0" VerticalAlignment="Center"/>
                    <ComboBox Grid.Column="1" x:Name="MonitorSelector" SelectionChanged="MonitorSelector_SelectionChanged" Background="#444444" Foreground="White" BorderThickness="0"/>
                </Grid>

                 <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <materialIcons:MaterialIcon Kind="HighDefinition" Width="16" Height="16" Foreground="Gray" Margin="0,0,10,0" VerticalAlignment="Center"/>
                    <ComboBox Grid.Column="1" x:Name="QualitySelector" SelectionChanged="QualitySelector_SelectionChanged" Background="#444444" Foreground="White" BorderThickness="0"/>
                </Grid>

                 <CheckBox x:Name="AcceptAllCheck" Content="Auto-accept incoming connections" Foreground="White" Margin="0,5,0,0"/>
            </StackPanel>

        </Border>

        <!-- Chat / Status Section -->
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Status -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                 <materialIcons:MaterialIcon Kind="Wifi" Width="16" Height="16" Foreground="#AAAAAA" Margin="0,0,5,0"/>
                 <TextBlock x:Name="StatusText" Text="Waiting for connections..." FontStyle="Italic" Foreground="#AAAAAA" TextWrapping="Wrap"/>
                 <TextBlock x:Name="HostStats" Text="" Foreground="#FFA500" Margin="10,0,0,0" FontSize="11" VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Chat Box -->
            <Border Grid.Row="1" Background="{StaticResource SurfaceBrush}" CornerRadius="5" Padding="5">
                <ListBox x:Name="ChatList" Background="Transparent" BorderThickness="0" Foreground="White" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                     <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" TextWrapping="Wrap" Margin="5"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Border>

            <!-- Chat Input -->
            <Grid Grid.Row="2" Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="ChatInput" KeyDown="ChatInput_KeyDown" IsEnabled="False" VerticalContentAlignment="Center" Height="30" Padding="5"/>
                <Button Grid.Column="1" x:Name="SendBtn" Click="SendBtn_Click" IsEnabled="False" Margin="10,0,0,0" Width="40" Background="{StaticResource AccentBrush}" BorderThickness="0">
                     <materialIcons:MaterialIcon Kind="Send" Width="16" Height="16" Foreground="White"/>
                </Button>
            </Grid>
        </Grid>

        <!-- Stop Button -->
        <Button Grid.Row="3" Click="Stop_Click" Margin="0,20,0,0" Background="#CC3333" Foreground="White" Height="40" BorderThickness="0">
             <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" CornerRadius="5">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                             <materialIcons:MaterialIcon Kind="StopCircle" Width="20" Height="20" Margin="0,0,10,0"/>
                             <TextBlock Text="Stop Hosting" FontWeight="Bold" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                             <Setter Property="Opacity" Value="0.9"/>
                             <Setter Property="Cursor" Value="Hand"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
</Window>
