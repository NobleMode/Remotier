<Window x:Class="Remotier.HostWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hosting" Height="250" Width="400"
        WindowStartupLocation="CenterScreen">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock Text="Hosting..." FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,15"/>
        <TextBlock x:Name="StatusText" Text="Waiting for connection..." HorizontalAlignment="Center" Margin="0,0,0,15"/>
        <TextBlock x:Name="IpText" Text="IP: 127.0.0.1" HorizontalAlignment="Center" FontSize="14" Margin="0,0,0,15"/>
        <Button Content="Stop Hosting" Width="150" Height="30" Click="Stop_Click" Background="#FFDDDD"/>
    </StackPanel>
</Window>
