<Window x:Class="Remotier.ConnectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Connect to Host" Height="400" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="CONNECT TO PC" FontSize="20" FontWeight="Bold" Foreground="{StaticResource AccentBrush}" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1">
            <TextBlock Text="Host IP Address:" Margin="0,0,0,5"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="80"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="IpInput" Text="127.0.0.1" Padding="5"/>
                <Button Grid.Column="1" Content="Connect" Margin="10,0,0,0" Click="Connect_Click"/>
            </Grid>
        </StackPanel>

        <TabControl Grid.Row="2" Margin="0,10,0,0">
            <TabItem Header="Local Network">
                <ListView x:Name="DiscoveredList" Background="{StaticResource SurfaceBrush}" BorderThickness="0" Foreground="White" SelectionChanged="DiscoveredList_SelectionChanged">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                <TextBlock Text="{Binding}" FontSize="12" Opacity="0.7"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </TabItem>
            <TabItem Header="Recent">
                <ListView x:Name="RecentList" Background="{StaticResource SurfaceBrush}" BorderThickness="0" Foreground="White" SelectionChanged="RecentList_SelectionChanged">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding}" Margin="5"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </TabItem>
        </TabControl>

        <Button Grid.Row="3" Content="Cancel" Margin="0,15,0,0" Height="30" Click="Cancel_Click" Background="#444444"/>
    </Grid>
</Window>
