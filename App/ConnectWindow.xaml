<Window x:Class="Remotier.ConnectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Connect" Height="200" Width="350"
        WindowStartupLocation="CenterScreen">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="250">
        <TextBlock Text="Host IP Address:" Margin="0,0,0,10"/>
        <TextBox x:Name="IpInput" Text="127.0.0.1" Padding="5"/>
        <Button Content="Connect" Height="30" Margin="0,10,0,0" Click="Connect_Click"/>
    </StackPanel>
</Window>
