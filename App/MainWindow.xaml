<Window x:Class="Remotier.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Remotier" Height="300" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Remotier Remote Desktop" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>
            <Button Content="Host" Width="200" Height="40" Click="Host_Click" Margin="0,0,0,20"/>
            <Button Content="Connect" Width="200" Height="40" Click="Connect_Click"/>
        </StackPanel>
    </Grid>
</Window>
